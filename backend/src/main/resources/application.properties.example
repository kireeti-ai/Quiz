spring.application.name=quizApp
server.port=8080

spring.datasource.url=jdbc:mysql://localhost:3306/kireeti
spring.datasource.username=root
spring.datasource.password=Dhanashree123@
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true

# --- SPRING AI CONFIGURATION ---
# (Ensure your API Key is here as discussed previously)
spring.ai.openai.api-key=${GROQ_API_KEY}
# Groq Base URL
spring.ai.openai.base-url=https://api.groq.com/openai

# Groq Model (Llama 3 is excellent for quiz generation)
spring.ai.openai.chat.options.model=llama-3.3-70b-versatile
spring.ai.openai.chat.options.temperature=0.7

# Upload Limits
spring.servlet.multipart.max-file-size=20MB
spring.servlet.multipart.max-request-size=20MB

